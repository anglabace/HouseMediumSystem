@CHARSET "UTF-8";


.nav{
	
	width: 90%;
	height:40px;
	line-height: 40px;
	font-size: 18px;
	font-weight:600;
	background-color: #F2F2F2;
	padding-left:20px; 
	margin-bottom: 20px;
}

.list>li{
	list-style: none;
	
}
.title{
	font-size:15px;
	vertical-align: middle;
}

.text{
	outline: none;
	font-size:15px;
	border:1px solid #F2F2F2;
	background-color:#FAFAFA;
}
/* çº¢* */
.red{
	color:red;
}

ul>li{
	width:330px;
	height:50px;
	display:inline-block;
	background-color: white;
	
}
.select{
	height:36px;
	width:150px;
	outline: none;
}

.intext{
	outline: none;
	font-size:12px;
	border:1px solid #F2F2F2;
	background-color:#FAFAFA;
	height:30px;
	width:200px;
}

.shorttext{
	outline: none;
	font-size:12px;
	border:1px solid #F2F2F2;
	background-color:#FAFAFA;
	height:30px;
	width:50px;
}
.saveBtn{
	width: 160px;
	height: 50px;
	background-color: #26BF8C;
	margin-top:130px;
	margin-left:80px;
	color:white;
	text-align: center;
	font-size:20px;
	line-height: 50px;
	border-radius:5px;
	cursor: pointer;
}
.saveBtn:HOVER {
	color:black;
}